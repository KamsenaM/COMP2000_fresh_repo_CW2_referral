<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.librarymanager">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LibraryManager"
        tools:targetApi="31">

        <!-- MEMBER MODE PAGES -->
        <activity
            android:name=".NotificationSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".BookDetailActivity"
            android:exported="false" />
        <activity
            android:name=".CatalogueActivity"
            android:exported="false" />
        <activity
            android:name=".MemberDashboardActivity"
            android:exported="false" />

        <!-- STAFF MODE PAGES -->
        <activity
            android:name=".BookRequestsActivity"
            android:exported="false" />
        <activity
            android:name=".ManageBooksActivity"
            android:exported="false" />
        <activity
            android:name=".ManageMembersActivity"
            android:exported="false" />
        <activity
            android:name=".StaffDashboardActivity"
            android:exported="false" />

        <!-- SHARED LOGIN PAGE -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- SPLASH / MAIN ENTRY POINT -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LibraryManager.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
