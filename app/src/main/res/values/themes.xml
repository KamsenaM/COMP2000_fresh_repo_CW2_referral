<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Light Theme -->
    <style name="Theme.LibraryManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Light mode colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Splash Theme without Action Bar (Light) -->
    <style name="Theme.LibraryManager.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
