<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Dark Theme -->
    <style name="Theme.LibraryManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Dark mode colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!-- Splash Theme without Action Bar (Dark) -->
    <style name="Theme.LibraryManager.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
